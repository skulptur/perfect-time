{
  "name": "perfect-time",
  "version": "0.2.0",
  "author": "skulptur",
  "license": "MIT",
  "module": "dist/perfect-time.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "clock",
    "time",
    "scheduling",
    "web audio",
    "sequencer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/skulptur/perfect-time"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "arrowParens": "always"
  },
  "size-limit": [
    {
      "path": "dist/perfect-time.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/perfect-time.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "audio-fns": "^0.3.2"
  }
}
